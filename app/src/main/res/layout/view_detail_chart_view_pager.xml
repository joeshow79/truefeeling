<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:gravity="center_horizontal" android:layout_width="fill_parent" android:layout_height="@dimen/view_pager_chart_height"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.v4.view.ViewPager
        android:id="@id/viewpager"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_marginTop="10.0dip">
        <ImageView
            android:id="@id/previous_day"
            android:padding="5.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_step_left_arrow"
            android:paddingEnd="3.0dip" />
        <TextView
            android:textSize="10.699982sp"
            android:textColor="#ccffffff"
            android:layout_gravity="center_vertical"
            android:id="@id/step_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@id/next_day"
            android:padding="5.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_step_right_arrow"
            android:onClick="onNextClick" android:paddingStart="3.0dip" />
    </LinearLayout>
</FrameLayout>